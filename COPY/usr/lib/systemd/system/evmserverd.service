[Unit]
Description=EVM server daemon
After=memcached.service manageiq-db-ready.service
Wants=memcached.service manageiq-db-ready.service

[Service]
WorkingDirectory=/var/www/miq/vmdb
EnvironmentFile=/etc/default/manageiq*.properties
ExecStart=/bin/sh -c "/bin/evmserver.sh start"
ExecStop=/bin/sh -c "/bin/evmserver.sh stop"
Group=manageiq
UMask=0002
Type=forking
Restart=on-failure
KillMode=process

[Install]
WantedBy=multi-user.target
